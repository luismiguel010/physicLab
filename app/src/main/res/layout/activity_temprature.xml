<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.sensors.environmental.Temprature">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <TextView
        android:id="@+id/viewTempC"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorPrimary"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/linear_chartC"
        android:layout_width="match_parent"
        android:layout_height="129dp" />

    <TextView
        android:id="@+id/viewTempK"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorAccent"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/linear_chartK"
        android:layout_width="match_parent"
        android:layout_height="129dp" />

    <TextView
        android:id="@+id/viewTempF"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorBlue"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/linear_chartF"
        android:layout_width="match_parent"
        android:layout_height="129dp" />

</LinearLayout>