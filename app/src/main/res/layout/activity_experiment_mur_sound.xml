<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExperimentMurSound"
    android:background="@drawable/background">

    <Button
        android:id="@+id/buttonMurSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimary"
        android:text="Calcular"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <EditText
        android:id="@+id/timeSoundOther"
        android:layout_width="128dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:ems="10"
        android:hint=""
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewLess"
        app:layout_constraintTop_toBottomOf="@+id/textViewLine" />

    <TextView
        android:id="@+id/timeSoundThis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/textViewV"
        app:layout_constraintTop_toBottomOf="@+id/textViewLine" />

    <EditText
        android:id="@+id/distanceMurSound"
        android:layout_width="105dp"
        android:layout_height="32dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:ems="10"
        android:hint=""
        android:inputType="numberDecimal"
        app:layout_constraintStart_toEndOf="@+id/textViewV"
        app:layout_constraintTop_toBottomOf="@+id/info2mur" />

    <Button
        android:id="@+id/eraseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@color/colorPrimary"
        android:text="Borrar"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toEndOf="@+id/buttonMurSound"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textViewV"
        android:layout_width="71dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:fontFamily="casual"
        android:text="v = "
        android:textSize="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewLine"
        android:layout_width="188dp"
        android:layout_height="18dp"
        android:text="-----------------------------------------------------"
        app:layout_constraintStart_toEndOf="@+id/textViewV"
        app:layout_constraintTop_toBottomOf="@+id/distanceMurSound" />

    <TextView
        android:id="@+id/textViewLess"
        android:layout_width="15dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:fontFamily="casual"
        android:text="-"
        android:textSize="50dp"
        app:layout_constraintStart_toEndOf="@+id/timeSoundThis"
        app:layout_constraintTop_toBottomOf="@+id/distanceMurSound" />

    <ImageView
        android:id="@+id/info2mur"
        android:layout_width="186dp"
        android:layout_height="137dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/distanceMurSound"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/info2mur" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="143dp"
        android:layout_height="158dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/timeSoundOther"
        app:layout_constraintTop_toBottomOf="@+id/timeSoundOther"
        app:srcCompat="@drawable/info1mur" />


</androidx.constraintlayout.widget.ConstraintLayout>